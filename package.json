{
  "name": "@make-stuff-work/event-sauced",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "Event Store",
    "Event Sourcing",
    "CQRS",
    "Command",
    "Query",
    "Multi-database"
  ],
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "commit": "git-cz"
  },
  "main": "dist/event-sauced.umd.js",
  "module": "dist/event-sauced.es5.js",
  "typings": "dist/types/event-sauced.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yannick Meeus <yannick.meeus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YannickMeeus/event-sauced-ts"
  },
  "license": "MIT",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/uuid": "^3.4.4",
    "colors": "^1.3.3",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "event-stream": "4.0.1",
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^3.0.0",
    "jest": "24.8.0",
    "lint-staged": "^9.0.2",
    "lodash": "4.17.14",
    "npm-check-updates": "^3.1.9",
    "nps": "5.9.5",
    "nps-utils": "1.7.0",
    "prettier": "^1.17.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.1.0",
    "rimraf": "^2.6.3",
    "rollup": "1.17.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "semantic-release": "^15.13.14",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5",
    "uuid": "^3.3.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm start prerequisites && npm start build",
      "pre-commit": "lint-staged"
    }
  }
}
