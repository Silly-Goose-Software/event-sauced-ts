{
  "name": "@make-stuff-work/event-sauced",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "Event Store",
    "Event Sourcing",
    "CQRS",
    "Command",
    "Query",
    "Multi-database"
  ],
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "commit": "git-cz"
  },
  "main": "dist/event-sauced.umd.js",
  "module": "dist/event-sauced.es5.js",
  "typings": "dist/types/event-sauced.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yannick Meeus <yannick.meeus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YannickMeeus/event-sauced-ts"
  },
  "license": "MIT",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "26.0.7",
    "@types/node": "14.0.27",
    "@types/uuid": "8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "colors": "1.4.0",
    "commitizen": "4.1.2",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-node": "^11.1.0",
    "event-stream": "4.0.1",
    "husky": "4.2.5",
    "jest": "26.2.0",
    "lint-staged": "10.2.11",
    "lodash": "4.17.19",
    "npm-check-updates": "7.0.2",
    "nps": "5.10.0",
    "nps-utils": "1.7.0",
    "prettier": "2.0.5",
    "prompt": "1.0.0",
    "replace-in-file": "6.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.23.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.6.2",
    "rollup-plugin-typescript2": "0.27.1",
    "semantic-release": "17.1.1",
    "ts-jest": "26.1.4",
    "ts-node": "8.10.2",
    "typedoc": "0.17.8",
    "typescript": "^3.9.7",
    "uuid": "8.3.0",
    "validate-commit-msg": "2.14.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm start prerequisites && npm start build",
      "pre-commit": "lint-staged"
    }
  }
}
