{
  "name": "@make-stuff-work/event-sauced",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "Event Store",
    "Event Sourcing",
    "CQRS",
    "Command",
    "Query",
    "Multi-database"
  ],
  "scripts": {
    "start": "nps",
    "test": "nps test",
    "commit": "git-cz"
  },
  "main": "dist/event-sauced.umd.js",
  "module": "dist/event-sauced.es5.js",
  "typings": "dist/types/event-sauced.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yannick Meeus <yannick.meeus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YannickMeeus/event-sauced-ts"
  },
  "license": "MIT",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "12.12.30",
    "@types/uuid": "3.4.8",
    "colors": "1.4.0",
    "commitizen": "4.0.3",
    "coveralls": "3.0.11",
    "cz-conventional-changelog": "3.1.0",
    "event-stream": "4.0.1",
    "greenkeeper-lockfile": "1.15.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "lodash": "4.17.15",
    "npm-check-updates": "4.0.4",
    "nps": "5.9.12",
    "nps-utils": "1.7.0",
    "prettier": "1.19.1",
    "prompt": "1.0.0",
    "replace-in-file": "5.0.2",
    "rimraf": "3.0.2",
    "rollup": "1.32.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.5.0",
    "rollup-plugin-typescript2": "0.26.0",
    "semantic-release": "17.0.4",
    "ts-jest": "24.1.0",
    "ts-node": "8.7.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "typedoc": "0.17.2",
    "typescript": "3.8.3",
    "uuid": "3.4.0",
    "validate-commit-msg": "2.14.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm start prerequisites && npm start build",
      "pre-commit": "lint-staged"
    }
  }
}
